<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="{{ theme_url }}/../../img/favicon.png">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}
    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    {% if config.session.theme == "dark" %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style-dark.min.css" type="text/css" />
    {% else %}
    <link rel="stylesheet" href="{{ theme_url }}/css/style.min.css" type="text/css" />
    {% endif %}
</head>
<!-- "Widescreen-mode" can be activated in portfolio/config/config.yml -->
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
<header class="topnav" id="topnav" role="navigation" tabindex="-1">
    <ul>
        {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
        <li{% if page.id == current_page.id %} class="active" {% endif %}>
        <a href="{{ page.url }}">
            {% if page.meta.icon %}
            <i class="{{ page.meta.icon }}"></i>
            {% else %}
            {{ page.title }}
            {% endif %}
        </a>
        {% endfor %}
    </li>
</ul>
</header>
<div class="wrapper">
    <div class="box sidebar"><title>Sidebar</title>
        <a href="kmom01"><h3 class="box-h3">Kmom01</h3></a>
        <a href="kmom02"><h3 class="box-h3">Kmom02</h3></a>
        <a href="kmom03"><h3 class="box-h3">Kmom03</h3></a>
        <a href="kmom04"><h3 class="box-h3">Kmom04</h3></a>
        <a href="kmom05"><h3 class="box-h3">Kmom05</h3></a>
        <a href="kmom06"><h3 class="box-h3">Kmom06</h3></a>
        <a href="kmom10"><h3 class="box-h3">Kmom10</h3></a>
    </div>
    <div class="box content">
        {{ content}}
    </div>
</div>
<div class="second">
    <div class="box read"><h3>Lär mer</h3></div>
    <div class="box illustration"><img class="articles-img" src="{{ base_url }}/image/online_articles.png" alt="read online"></div>
    <div class="box learn"><h3>Läs mer</h3></div>
</div>
<footer class="site-footer">
    <div class="container-footer">
        <p class="read-more">Länkar</p>
        <div class="social">
            <!-- Loads from FontAwesome (themes/shared/css/font-awesome.min.css) -->
            {% for social in pages["_meta"].meta.social %}
            <a href="{{ social.url }}" title="{{ social.title }}" role="button">
                <i class="{{ social.icon }}" aria-hidden="true"></i>
                <span class="sr-only">{{ social.title }}</span>
                {% endfor %}
            </div>
        </div>
    </footer>
</body>
</html>
